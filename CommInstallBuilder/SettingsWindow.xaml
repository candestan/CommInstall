<Window x:Class="CommInstallBuilder.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" 
        Height="500" Width="600"
        WindowStyle="None" 
        AllowsTransparency="True" 
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">
    
    <Window.Resources>
        <!-- Modern Color Scheme - Dark Theme -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#7C3AED"/>
        <SolidColorBrush x:Key="PrimaryLightBrush" Color="#A78BFA"/>
        <SolidColorBrush x:Key="PrimaryDarkBrush" Color="#5B21B6"/>
        <SolidColorBrush x:Key="BackgroundBrush" Color="#1F2937"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="#374151"/>
        <SolidColorBrush x:Key="CardBrush" Color="#4B5563"/>
        <SolidColorBrush x:Key="TextBrush" Color="#F9FAFB"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#D1D5DB"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#6B7280"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#10B981"/>
        <SolidColorBrush x:Key="WarningBrush" Color="#F59E0B"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="#EF4444"/>
        
        <!-- Modern Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryLightBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryDarkBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" 
                                    Direction="270" 
                                    ShadowDepth="4" 
                                    Opacity="0.1" 
                                    BlurRadius="12"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Border Background="{StaticResource BackgroundBrush}" 
            CornerRadius="16" 
            BorderBrush="{StaticResource BorderBrush}" 
            BorderThickness="1">
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Custom Title Bar -->
            <Border Grid.Row="0" 
                    Background="{StaticResource PrimaryBrush}" 
                    CornerRadius="16,16,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- App Icon and Title -->
                    <StackPanel Grid.Column="0" 
                                Orientation="Horizontal" 
                                Margin="24,16">
                        <TextBlock Text="⚙️" FontSize="24" VerticalAlignment="Center"/>
                        <TextBlock Text="Settings" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="White"
                                   VerticalAlignment="Center"
                                   Margin="12,0,0,0"/>
                    </StackPanel>
                    
                    <!-- Window Controls -->
                    <StackPanel Grid.Column="1" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right">
                        
                        <Button x:Name="MinimizeButton" 
                                Content="─" 
                                Width="40" Height="32"
                                Background="Transparent"
                                Foreground="White"
                                BorderThickness="0"
                                FontSize="16"
                                Click="MinimizeButton_Click"/>
                        
                        <Button x:Name="CloseButton" 
                                Content="✕" 
                                Width="40" Height="32"
                                Background="Transparent"
                                Foreground="White"
                                BorderThickness="0"
                                FontSize="16"
                                Click="CloseButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Main Content -->
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto" 
                          Margin="24">
                
                <StackPanel>
                    <!-- Language Settings -->
                    <Border Style="{StaticResource CardStyle}" 
                            Margin="0,0,0,24">
                        <StackPanel>
                            <TextBlock Text="🌍 Language Settings" 
                                       FontSize="20" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource TextBrush}"
                                       Margin="0,0,0,16"/>
                            
                            <TextBlock Text="Select your preferred language for the application interface:" 
                                       FontSize="14" 
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Margin="0,0,0,16"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Text="Language:" 
                                           FontSize="14" 
                                           FontWeight="Medium" 
                                           Foreground="{StaticResource TextBrush}"
                                           VerticalAlignment="Center"
                                           Margin="0,0,16,0"/>
                                
                                <ComboBox x:Name="LanguageComboBox" 
                                          Grid.Column="1"
                                          Width="200" 
                                          HorizontalAlignment="Left"
                                          Background="{StaticResource CardBrush}"
                                          Foreground="{StaticResource TextBrush}"
                                          BorderBrush="{StaticResource BorderBrush}"
                                          SelectionChanged="LanguageComboBox_SelectionChanged">
                                    <ComboBoxItem Content="English" Tag="en" IsSelected="True"/>
                                    <ComboBoxItem Content="Türkçe" Tag="tr"/>
                                </ComboBox>
                            </Grid>
                            
                            <TextBlock Text="Note: Language changes will take effect after restarting the application." 
                                       FontSize="12" 
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Margin="0,16,0,0"
                                       FontStyle="Italic"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Theme Settings -->
                    <Border Style="{StaticResource CardStyle}" 
                            Margin="0,0,0,24">
                        <StackPanel>
                            <TextBlock Text="🎨 Theme Settings" 
                                       FontSize="20" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource TextBrush}"
                                       Margin="0,0,0,16"/>
                            
                            <TextBlock Text="Choose your preferred visual theme:" 
                                       FontSize="14" 
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Margin="0,0,0,16"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Text="Theme:" 
                                           FontSize="14" 
                                           FontWeight="Medium" 
                                           Foreground="{StaticResource TextBrush}"
                                           VerticalAlignment="Center"
                                           Margin="0,0,16,0"/>
                                
                                <TextBlock Grid.Column="1"
                                          Text="Dark Theme (Fixed)" 
                                          FontSize="14" 
                                          Foreground="{StaticResource TextSecondaryBrush}"
                                          VerticalAlignment="Center"
                                          FontStyle="Italic"/>
                            </Grid>
                            
                            <TextBlock Text="Auto theme will follow your Windows system theme setting." 
                                       FontSize="12" 
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Margin="0,16,0,0"
                                       FontStyle="Italic"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Advanced Settings -->
                    <Border Style="{StaticResource CardStyle}" 
                            Margin="0,0,0,24">
                        <StackPanel>
                            <TextBlock Text="🔧 Advanced Settings" 
                                       FontSize="20" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource TextBrush}"
                                       Margin="0,0,0,16"/>
                            
                            <CheckBox x:Name="AutoSaveCheckBox" 
                                      Content="Auto-save projects every 5 minutes" 
                                      FontSize="14" 
                                      Foreground="{StaticResource TextBrush}"
                                      Margin="0,8"/>
                            
                            <CheckBox x:Name="CheckUpdatesCheckBox" 
                                      Content="Check for updates on startup" 
                                      FontSize="14" 
                                      Foreground="{StaticResource TextBrush}"
                                      Margin="0,8"/>
                            
                            <CheckBox x:Name="ShowTooltipsCheckBox" 
                                      Content="Show tooltips and help text" 
                                      FontSize="14" 
                                      Foreground="{StaticResource TextBrush}"
                                      Margin="0,8"/>
                            
                            <CheckBox x:Name="EnableAnimationsCheckBox" 
                                      Content="Enable UI animations and transitions" 
                                      FontSize="14" 
                                      Foreground="{StaticResource TextBrush}"
                                      Margin="0,8"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- GitHub Integration -->
                    <Border Style="{StaticResource CardStyle}" 
                            Margin="0,0,0,24">
                        <StackPanel>
                            <TextBlock Text="📚 GitHub Integration" 
                                       FontSize="20" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource TextBrush}"
                                       Margin="0,0,0,16"/>
                            
                            <TextBlock Text="Connect to GitHub for community support and updates:" 
                                       FontSize="14" 
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Margin="0,0,0,16"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Text="GitHub Username:" 
                                           FontSize="14" 
                                           FontWeight="Medium" 
                                           Foreground="{StaticResource TextBrush}"
                                           VerticalAlignment="Center"
                                           Margin="0,0,16,0"/>
                                
                                <TextBox x:Name="GitHubUsernameTextBox" 
                                         Grid.Column="1"
                                         Width="200" 
                                         HorizontalAlignment="Left"
                                         Background="{StaticResource CardBrush}"
                                         Foreground="{StaticResource TextBrush}"
                                         BorderBrush="{StaticResource BorderBrush}"
                                         Padding="8,6"
                                         Text="CommInstall"/>
                            </Grid>
                            
                            <Button Content="Check for Updates" 
                                    Style="{StaticResource ModernButtonStyle}"
                                    HorizontalAlignment="Left"
                                    Margin="0,16,0,0"
                                    Click="CheckUpdates_Click"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
            
            <!-- Footer -->
            <Border Grid.Row="2" 
                    Background="{StaticResource SurfaceBrush}" 
                    CornerRadius="0,0,16,16"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,1,0,0"
                    Padding="24,16">
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="Settings will be saved automatically when changed." 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               VerticalAlignment="Center"/>
                    
                    <StackPanel Grid.Column="1" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right">
                        <Button x:Name="ResetButton" 
                                Content="Reset to Default" 
                                Style="{StaticResource ModernButtonStyle}"
                                Background="{StaticResource WarningBrush}"
                                Margin="0,0,12,0"
                                Click="ResetButton_Click"/>
                        
                        <Button x:Name="SaveButton" 
                                Content="Save Settings" 
                                Style="{StaticResource ModernButtonStyle}"
                                Background="{StaticResource SuccessBrush}"
                                Click="SaveButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
