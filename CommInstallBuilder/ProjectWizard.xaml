<Window x:Class="CommInstallBuilder.ProjectWizard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CommInstall Builder - Project Wizard" 
        Height="600" Width="800"
        WindowStyle="None" 
        AllowsTransparency="True" 
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">
    
    <Window.Resources>
        <!-- Modern Color Scheme - Dark Theme -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#7C3AED"/>
        <SolidColorBrush x:Key="PrimaryLightBrush" Color="#A78BFA"/>
        <SolidColorBrush x:Key="PrimaryDarkBrush" Color="#5B21B6"/>
        <SolidColorBrush x:Key="BackgroundBrush" Color="#1F2937"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="#374151"/>
        <SolidColorBrush x:Key="CardBrush" Color="#4B5563"/>
        <SolidColorBrush x:Key="TextBrush" Color="#F9FAFB"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#D1D5DB"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#6B7280"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#10B981"/>
        <SolidColorBrush x:Key="WarningBrush" Color="#F59E0B"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="#EF4444"/>
        
        <!-- Modern Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryLightBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryDarkBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" 
                                    Direction="270" 
                                    ShadowDepth="4" 
                                    Opacity="0.1" 
                                    BlurRadius="12"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Border Background="{StaticResource BackgroundBrush}" 
            CornerRadius="16" 
            BorderBrush="{StaticResource BorderBrush}" 
            BorderThickness="1">
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Custom Title Bar -->
            <Border Grid.Row="0" 
                    Background="{StaticResource PrimaryBrush}" 
                    CornerRadius="16,16,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- App Icon and Title -->
                    <StackPanel Grid.Column="0" 
                                Orientation="Horizontal" 
                                Margin="24,16">
                        <TextBlock Text="ðŸš€" FontSize="24" VerticalAlignment="Center"/>
                        <TextBlock Text="CommInstall Builder - Project Wizard" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="White"
                                   VerticalAlignment="Center"
                                   Margin="12,0,0,0"/>
                    </StackPanel>
                    
                    <!-- Window Controls -->
                    <StackPanel Grid.Column="1" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right">
                        
                        <Button x:Name="MinimizeButton" 
                                Content="â”€" 
                                Width="40" Height="32"
                                Background="Transparent"
                                Foreground="White"
                                BorderThickness="0"
                                FontSize="16"
                                Click="MinimizeButton_Click"/>
                        
                        <Button x:Name="CloseButton" 
                                Content="âœ•" 
                                Width="40" Height="32"
                                Background="Transparent"
                                Foreground="White"
                                BorderThickness="0"
                                FontSize="16"
                                Click="CloseButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Main Content -->
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto" 
                          Margin="24">
                
                <StackPanel>
                    <!-- Welcome Section -->
                    <Border Style="{StaticResource CardStyle}" 
                            Margin="0,0,0,24">
                        <StackPanel>
                            <TextBlock Text="ðŸš€ Welcome to CommInstall Builder!" 
                                       FontSize="28" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource TextBrush}"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,16"/>
                            
                            <TextBlock Text="Create professional installers with ease using our modern, modular approach. Choose how you'd like to get started:" 
                                       FontSize="16" 
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       HorizontalAlignment="Center"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,24"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Project Options -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="24"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- New Project Option -->
                        <Border Grid.Column="0" 
                                Style="{StaticResource CardStyle}"
                                Cursor="Hand"
                                MouseLeftButtonDown="NewProject_MouseLeftButtonDown">
                            <StackPanel>
                                <TextBlock Text="ðŸ†•" 
                                           FontSize="48" 
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,16"/>
                                
                                <TextBlock Text="Create New Project" 
                                           FontSize="20" 
                                           FontWeight="Bold" 
                                           Foreground="{StaticResource TextBrush}"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,12"/>
                                
                                <TextBlock Text="Start from scratch with a new installer project. Configure all modules and settings step by step." 
                                           FontSize="14" 
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           HorizontalAlignment="Center"
                                           TextWrapping="Wrap"
                                           Margin="0,0,0,20"/>
                                
                                <Button Content="Create New Project" 
                                        Style="{StaticResource ModernButtonStyle}"
                                        HorizontalAlignment="Center"
                                        Click="NewProject_Click"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Open Project Option -->
                        <Border Grid.Column="2" 
                                Style="{StaticResource CardStyle}"
                                Cursor="Hand"
                                MouseLeftButtonDown="OpenProject_MouseLeftButtonDown">
                            <StackPanel>
                                <TextBlock Text="ðŸ“‚" 
                                           FontSize="48" 
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,16"/>
                                
                                <TextBlock Text="Open Existing Project" 
                                           FontSize="20" 
                                           FontWeight="Bold" 
                                           Foreground="{StaticResource TextBrush}"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,12"/>
                                
                                <TextBlock Text="Continue working on an existing project. Load your saved configuration and continue where you left off." 
                                           FontSize="14" 
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           HorizontalAlignment="Center"
                                           TextWrapping="Wrap"
                                           Margin="0,0,0,20"/>
                                
                                <Button Content="Open Project" 
                                        Style="{StaticResource ModernButtonStyle}"
                                        HorizontalAlignment="Center"
                                        Click="OpenProject_Click"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                    
                    <!-- Recent Projects Section -->
                    <Border Style="{StaticResource CardStyle}" 
                            Margin="0,24,0,0">
                        <StackPanel>
                            <TextBlock Text="ðŸ“‹ Recent Projects" 
                                       FontSize="18" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource TextBrush}"
                                       Margin="0,0,0,16"/>
                            
                            <ItemsControl x:Name="RecentProjectsList">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{StaticResource CardBrush}" 
                                                BorderBrush="{StaticResource BorderBrush}"
                                                BorderThickness="1"
                                                CornerRadius="8"
                                                Padding="16"
                                                Margin="0,0,0,8"
                                                Cursor="Hand"
                                                MouseLeftButtonDown="RecentProject_Click">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="{Binding Name}" 
                                                               FontSize="16" 
                                                               FontWeight="SemiBold" 
                                                               Foreground="{StaticResource TextBrush}"/>
                                                    <TextBlock Text="{Binding Path}" 
                                                               FontSize="12" 
                                                               Foreground="{StaticResource TextSecondaryBrush}"
                                                               Margin="0,4,0,0"/>
                                                    <TextBlock Text="{Binding LastModified}" 
                                                               FontSize="11" 
                                                               Foreground="{StaticResource TextSecondaryBrush}"
                                                               Margin="0,2,0,0"/>
                                                </StackPanel>
                                                
                                                <Button Grid.Column="1" 
                                                        Content="ðŸ“‚" 
                                                        Background="Transparent"
                                                        BorderThickness="0"
                                                        FontSize="16"
                                                        Padding="8"
                                                        Click="OpenRecentProject_Click"
                                                        Tag="{Binding Path}"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            
                            <TextBlock x:Name="NoRecentProjectsText" 
                                       Text="No recent projects found. Create your first project to get started!" 
                                       FontSize="14" 
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       HorizontalAlignment="Center"
                                       Margin="0,16,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
            
            <!-- Footer -->
            <Border Grid.Row="2" 
                    Background="{StaticResource SurfaceBrush}" 
                    CornerRadius="0,0,16,16"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,1,0,0"
                    Padding="24,16">
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="Version 1.0.0 - Â© 2024 CommInstall Team" 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               VerticalAlignment="Center"/>
                    
                    <StackPanel Grid.Column="1" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right">
                        <Button x:Name="ExitButton" 
                                Content="Exit" 
                                Style="{StaticResource ModernButtonStyle}"
                                Background="{StaticResource ErrorBrush}"
                                Click="Exit_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
