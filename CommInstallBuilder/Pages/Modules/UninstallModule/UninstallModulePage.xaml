<UserControl x:Class="CommInstallBuilder.Pages.Modules.UninstallModule.UninstallModulePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <UserControl.Resources>
        <!-- Modern GroupBox Style -->
        <Style x:Key="ModernGroupBoxStyle" TargetType="GroupBox">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <Border Grid.Row="0" 
                                        Background="{DynamicResource PrimaryBrush}"
                                        Margin="-16,-16,-16,0"
                                        Padding="16,8">
                                    <TextBlock Text="{TemplateBinding Header}"
                                               FontWeight="Bold"
                                               Foreground="White"
                                               FontSize="14"/>
                                </Border>
                                
                                <ContentPresenter Grid.Row="1" 
                                                Margin="0,8,0,0"
                                                Content="{TemplateBinding Content}"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <TextBlock Text="ðŸ—‘ï¸ Uninstall Configuration" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Margin="0,0,0,20"
                           Foreground="{DynamicResource TextBrush}"/>
                
                <!-- Uninstall Options -->
                <GroupBox Header="Uninstall Options" 
                          Margin="0,0,0,20"
                          Foreground="{DynamicResource TextBrush}"
                          BorderBrush="{DynamicResource BorderBrush}"
                          Style="{StaticResource ModernGroupBoxStyle}">
                    <StackPanel Margin="10">
                        <CheckBox x:Name="CreateUninstallerCheckBox" 
                                  Content="Create uninstaller" 
                                  FontSize="14" 
                                  Foreground="{DynamicResource TextBrush}"
                                  Margin="0,8"
                                  IsChecked="True"/>
                        
                        <CheckBox x:Name="AddToAddRemoveProgramsCheckBox" 
                                  Content="Add to Add/Remove Programs" 
                                  FontSize="14" 
                                  Foreground="{DynamicResource TextBrush}"
                                  Margin="0,8"
                                  IsChecked="True"/>
                        
                        <CheckBox x:Name="RemoveRegistryKeysCheckBox" 
                                  Content="Remove registry keys during uninstall" 
                                  FontSize="14" 
                                  Foreground="{DynamicResource TextBrush}"
                                  Margin="0,8"
                                  IsChecked="True"/>
                        
                        <CheckBox x:Name="RemoveShortcutsCheckBox" 
                                  Content="Remove shortcuts during uninstall" 
                                  FontSize="14" 
                                  Foreground="{DynamicResource TextBrush}"
                                  Margin="0,8"
                                  IsChecked="True"/>
                        
                        <CheckBox x:Name="RemoveFileExtensionsCheckBox" 
                                  Content="Remove file extensions during uninstall" 
                                  FontSize="14" 
                                  Foreground="{DynamicResource TextBrush}"
                                  Margin="0,8"/>
                    </StackPanel>
                </GroupBox>
                
                <!-- Uninstaller Location -->
                <GroupBox Header="Uninstaller Location" 
                          Margin="0,0,0,20"
                          Foreground="{DynamicResource TextBrush}"
                          BorderBrush="{DynamicResource BorderBrush}"
                          Style="{StaticResource ModernGroupBoxStyle}">
                    <StackPanel Margin="10">
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Text="Location:" 
                                       Grid.Column="0"
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,0"
                                       Foreground="{DynamicResource TextBrush}"/>
                            
                            <TextBox x:Name="UninstallerLocationTextBox" 
                                     Grid.Column="1"
                                     Text="%INSTALLDIR%\uninstall.exe"
                                     Background="{DynamicResource CardBrush}"
                                     Foreground="{DynamicResource TextBrush}"
                                     BorderBrush="{DynamicResource BorderBrush}"
                                     Padding="8,6"
                                     Margin="0,0,10,0"/>
                            
                            <Button Content="Browse" 
                                    Grid.Column="2"
                                    Background="{DynamicResource PrimaryBrush}"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Padding="16,8"
                                    Cursor="Hand"/>
                        </Grid>
                        
                        <TextBlock Text="Use %INSTALLDIR% for the installation directory" 
                                   FontSize="12" 
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   FontStyle="Italic"/>
                    </StackPanel>
                </GroupBox>
                
                <!-- Registry Cleanup -->
                <GroupBox Header="Registry Cleanup" 
                          Margin="0,0,0,20"
                          Foreground="{DynamicResource TextBrush}"
                          BorderBrush="{DynamicResource BorderBrush}"
                          Style="{StaticResource ModernGroupBoxStyle}">
                    <StackPanel Margin="10">
                        <TextBlock Text="Registry keys to remove during uninstall:" 
                                   FontSize="14" 
                                   FontWeight="Medium"
                                   Margin="0,0,0,10"
                                   Foreground="{DynamicResource TextBrush}"/>
                        
                        <Border Background="{DynamicResource CardBrush}" 
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="1"
                                Padding="12"
                                Height="150">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <TextBlock x:Name="RegistryKeysTextBlock" 
                                           Text="HKEY_LOCAL_MACHINE\SOFTWARE\CommInstall&#x0a;HKEY_CURRENT_USER\SOFTWARE\CommInstall&#x0a;HKEY_CLASSES_ROOT\.comminstall&#x0a;&#x0a;Additional keys can be added here..." 
                                           FontSize="12" 
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           TextWrapping="Wrap"/>
                            </ScrollViewer>
                        </Border>
                        
                        <TextBlock Text="One registry key per line" 
                                   FontSize="12" 
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   FontStyle="Italic"
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </GroupBox>
                
                <!-- File Cleanup -->
                <GroupBox Header="File Cleanup" 
                          Margin="0,0,0,20"
                          Foreground="{DynamicResource TextBrush}"
                          BorderBrush="{DynamicResource BorderBrush}"
                          Style="{StaticResource ModernGroupBoxStyle}">
                    <StackPanel Margin="10">
                        <TextBlock Text="Files and folders to remove during uninstall:" 
                                   FontSize="14" 
                                   FontWeight="Medium"
                                   Margin="0,0,0,10"
                                   Foreground="{DynamicResource TextBrush}"/>
                        
                        <Border Background="{DynamicResource CardBrush}" 
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="1"
                                Padding="12"
                                Height="150">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <TextBlock x:Name="FilesToRemoveTextBlock" 
                                           Text="%INSTALLDIR%\logs\&#x0a;%INSTALLDIR%\temp\&#x0a;%APPDATA%\CommInstall\&#x0a;%LOCALAPPDATA%\CommInstall\&#x0a;&#x0a;Additional files/folders can be added here..." 
                                           FontSize="12" 
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           TextWrapping="Wrap"/>
                            </ScrollViewer>
                        </Border>
                        
                        <TextBlock Text="One file/folder per line. Use environment variables like %APPDATA%" 
                                   FontSize="12" 
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   FontStyle="Italic"
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </GroupBox>
                
                <!-- Uninstall Confirmation -->
                <GroupBox Header="Uninstall Confirmation" 
                          Margin="0,0,0,20"
                          Foreground="{DynamicResource TextBrush}"
                          BorderBrush="{DynamicResource BorderBrush}"
                          Style="{StaticResource ModernGroupBoxStyle}">
                    <StackPanel Margin="10">
                        <CheckBox x:Name="ShowUninstallConfirmationCheckBox" 
                                  Content="Show confirmation dialog before uninstall" 
                                  FontSize="14" 
                                  Foreground="{DynamicResource TextBrush}"
                                  Margin="0,8"
                                  IsChecked="True"/>
                        
                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Text="Message:" 
                                       Grid.Column="0"
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,0"
                                       Foreground="{DynamicResource TextBrush}"/>
                            
                            <TextBox x:Name="UninstallMessageTextBox" 
                                     Grid.Column="1"
                                     Text="Are you sure you want to uninstall CommInstall? This will remove all program files and settings."
                                     Background="{DynamicResource CardBrush}"
                                     Foreground="{DynamicResource TextBrush}"
                                     BorderBrush="{DynamicResource BorderBrush}"
                                     Padding="8,6"/>
                        </Grid>
                        
                        <CheckBox x:Name="ShowUninstallProgressCheckBox" 
                                  Content="Show uninstall progress" 
                                  FontSize="14" 
                                  Foreground="{DynamicResource TextBrush}"
                                  Margin="0,8"
                                  IsChecked="True"/>
                    </StackPanel>
                </GroupBox>
                
                <!-- Advanced Options -->
                <GroupBox Header="Advanced Options" 
                          Margin="0,0,0,20"
                          Foreground="{DynamicResource TextBrush}"
                          BorderBrush="{DynamicResource BorderBrush}"
                          Style="{StaticResource ModernGroupBoxStyle}">
                    <StackPanel Margin="10">
                        <CheckBox x:Name="ForceUninstallCheckBox" 
                                  Content="Force uninstall (ignore errors)" 
                                  FontSize="14" 
                                  Foreground="{DynamicResource TextBrush}"
                                  Margin="0,8"/>
                        
                        <CheckBox x:Name="RestartAfterUninstallCheckBox" 
                                  Content="Restart computer after uninstall" 
                                  FontSize="14" 
                                  Foreground="{DynamicResource TextBrush}"
                                  Margin="0,8"/>
                        
                        <CheckBox x:Name="CreateUninstallLogCheckBox" 
                                  Content="Create uninstall log file" 
                                  FontSize="14" 
                                  Foreground="{DynamicResource TextBrush}"
                                  Margin="0,8"/>
                        
                        <CheckBox x:Name="RemoveUserDataCheckBox" 
                                  Content="Remove user data and settings" 
                                  FontSize="14" 
                                  Foreground="{DynamicResource TextBrush}"
                                  Margin="0,8"/>
                    </StackPanel>
                </GroupBox>
                
                <!-- Summary -->
                <GroupBox Header="Uninstall Configuration Summary" 
                          Margin="0,0,0,20"
                          Foreground="{DynamicResource TextBrush}"
                          BorderBrush="{DynamicResource BorderBrush}"
                          Style="{StaticResource ModernGroupBoxStyle}">
                    <StackPanel Margin="10">
                        <TextBlock Text="ðŸ“‹ Current Configuration:" 
                                   FontSize="16" 
                                   FontWeight="Bold"
                                   Margin="0,0,0,10"
                                   Foreground="{DynamicResource TextBrush}"/>
                        
                        <TextBlock x:Name="UninstallSummaryTextBlock" 
                                   Text="â€¢ Uninstaller will be created&#x0a;â€¢ Added to Add/Remove Programs&#x0a;â€¢ Registry keys will be cleaned&#x0a;â€¢ Shortcuts will be removed&#x0a;â€¢ Confirmation dialog shown&#x0a;â€¢ Progress bar displayed&#x0a;&#x0a;Uninstaller location: %INSTALLDIR%\uninstall.exe" 
                                   FontSize="14" 
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
