<Window x:Class="CommInstallBuilder.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CommInstall Builder" 
        Height="400" Width="600"
        WindowStyle="None" 
        AllowsTransparency="True" 
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    
    <Window.Resources>
        <!-- Modern Color Scheme -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#7C3AED"/>
        <SolidColorBrush x:Key="PrimaryLightBrush" Color="#A78BFA"/>
        <SolidColorBrush x:Key="PrimaryDarkBrush" Color="#5B21B6"/>
        <SolidColorBrush x:Key="BackgroundBrush" Color="#0F0F23"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="#1A1A2E"/>
        <SolidColorBrush x:Key="CardBrush" Color="#16213E"/>
        <SolidColorBrush x:Key="TextBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#B3B3B3"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#2D2D44"/>
    </Window.Resources>
    
    <Border Background="{StaticResource BackgroundBrush}" 
            CornerRadius="20" 
            BorderBrush="{StaticResource PrimaryBrush}" 
            BorderThickness="2">
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Logo and Title -->
            <StackPanel Grid.Row="1" HorizontalAlignment="Center" Margin="0,40,0,20">
                <TextBlock Text="ðŸš€" FontSize="48" HorizontalAlignment="Center"/>
                <TextBlock Text="CommInstall Builder" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="{StaticResource TextBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0"/>
                <TextBlock Text="Modern Installer Creation Tool" 
                           FontSize="14" 
                           Foreground="{StaticResource TextSecondaryBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>
            
            <!-- Loading Ring -->
            <Grid Grid.Row="2" HorizontalAlignment="Center" Margin="0,20">
                <Ellipse Width="60" Height="60" 
                         Stroke="{StaticResource PrimaryBrush}" 
                         StrokeThickness="4" 
                         Fill="Transparent"
                         x:Name="LoadingRing">
                    <Ellipse.RenderTransform>
                        <RotateTransform CenterX="30" CenterY="30"/>
                    </Ellipse.RenderTransform>
                </Ellipse>
                <Ellipse Width="40" Height="40" 
                         Stroke="{StaticResource PrimaryLightBrush}" 
                         StrokeThickness="3" 
                         Fill="Transparent"
                         Opacity="0.7">
                    <Ellipse.RenderTransform>
                        <RotateTransform CenterX="20" CenterY="20"/>
                    </Ellipse.RenderTransform>
                </Ellipse>
            </Grid>
            
            <!-- Loading Text -->
            <StackPanel Grid.Row="3" HorizontalAlignment="Center" Margin="0,20">
                <TextBlock x:Name="LoadingText" 
                           Text="Initializing..." 
                           FontSize="16" 
                           Foreground="{StaticResource TextBrush}"
                           HorizontalAlignment="Center"/>
                <TextBlock x:Name="StatusText" 
                           Text="Loading modules..." 
                           FontSize="12" 
                           Foreground="{StaticResource TextSecondaryBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>
            
            <!-- Version Info -->
            <StackPanel Grid.Row="4" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20">
                <TextBlock Text="Version 1.0.0" 
                           FontSize="12" 
                           Foreground="{StaticResource TextSecondaryBrush}"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Â© 2025 CommInstall Team" 
                           FontSize="10" 
                           Foreground="{StaticResource TextSecondaryBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,2,0,0"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
